<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mall" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_container</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="splash_screen">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="bottomNavBarTheme">
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Mall.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="left_right_padding_8dp">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="text_black_theme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="prod_name_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="prod_price">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headings_and_imp_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="large_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="small_description">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MyDialogStyle">
        <!-- Background Color-->
        <item name="android:background">@color/primary_container</item>
        <!-- Text Color for title and message -->
        <!-- <item name="colorOnSurface">@color/primary_container</item>-->
        <!-- Style for positive button -->
        <!--        <item name="buttonBarPositiveButtonStyle">@style/DialogBtnStyle</item>-->
        <!-- Style for negative button -->
        <!--        <item name="buttonBarNegativeButtonStyle">@style/DialogBtnStyle</item>-->

    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">@drawable/gradient_spinner</item>-->
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Entry">

        <item name="chipBackgroundColor">@color/selector_filter_chip_bg_color</item>
        <item name="checkedIcon">@null</item>
        <item name="closeIcon">@drawable/down_arrow</item>
        <item name="closeIconTint">@color/primary</item>
        <item name="strokeWidth">1dp</item>


    </style>


</resources>