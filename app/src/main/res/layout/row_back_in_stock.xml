<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/item_view"
    app:cardElevation="0dp"
    app:strokeColor="@color/primary"
    app:strokeWidth="0.3dp"


    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_background"

        >

        <ImageView
            app:layout_constraintBottom_toTopOf="@+id/tv_wishlist_product_name"
            android:id="@+id/iv_wishlist_prod_img"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="2dp"
            android:src="@drawable/img_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            />

        <TextView
            android:id="@+id/tv_wishlist_product_name"
            style="@style/left_right_padding_6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_wishlist_product_price"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_wishlist_prod_img"
            tools:text="Product Name"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"


            />

        <TextView
            android:id="@+id/tv_wishlist_product_price"
            style="@style/left_right_padding_6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_wishlist_product_name"
            tools:text="$ 3000" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>