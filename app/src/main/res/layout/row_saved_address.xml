<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/tv_address_name_title"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name :"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"


        />

    <TextView
        android:id="@+id/tv_address_name"
        android:layout_width="0dp"
        android:textColor="@color/black"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Rahul Raj"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tv_address_name_title"

        />

    <TextView
        android:id="@+id/tv_address_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:textColor="@color/black"

        android:text="Phone :"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tv_address_phone" />

    <TextView
        android:id="@+id/tv_address_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
                android:textColor="@color/black"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="9155881234"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_name"

        />

    <TextView
        android:id="@+id/tv_address_address_title"
        android:layout_width="wrap_content"
                android:textColor="@color/black"

        android:layout_height="wrap_content"
        android:text="Address :"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tv_address_delivery_address" />

    <TextView
        android:id="@+id/tv_address_delivery_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
                android:textColor="@color/black"

        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="Nutandih, near govt primary school, Po jagjiwan nagar dhanbad"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_phone"

        />

    <TextView
        android:id="@+id/tv_address_PIN_title"
        android:layout_width="wrap_content"
                android:textColor="@color/black"

        android:layout_height="wrap_content"
        android:text="PIN Code :"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tv_address_PIN_address" />

    <TextView
        android:id="@+id/tv_address_PIN_address"
                android:textColor="@color/black"

        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="826003"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_delivery_address"

        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>